@{int j = 0;}
@for (int i = 0; i < Model.Stocks.Count / 3; i++)
{
<div class="row">
	<div class="col">
		<a asp-controller="Product" asp-action="ShowProduct" asp-route-stockId="@Model.Stocks[j].Product.Id">
			<img class="prod-image" src="@Model.Stocks[j].Product.PicturePath">
			<h6>@Model.Stocks[j].Product.Name</h6>
			<h6>@Model.Stocks[j].Product.Category.Name</h6>
			<h6>Shop: @Model.Stocks[j].Shop.Name</h6>
			<h6>In stock: @Model.Stocks[j].Quantity</h6>
			<h6>Price: @Model.Stocks[j].Price</h6>
		</a>
	</div>
	<div class="col">
		<a asp-controller="Product" asp-action="ShowProduct" asp-route-stockId="@Model.Stocks[j+1].Id">
			<img class="prod-image" src="@Model.Stocks[j+1].Product.PicturePath">
			<h6>@Model.Stocks[j + 1].Product.Name</h6>
			<h6>@Model.Stocks[j + 1].Product.Category.Name</h6>
			<h6>Shop: @Model.Stocks[j + 1].Shop.Name</h6>
			<h6>In stock: @Model.Stocks[j + 1].Quantity</h6>
			<h6>Price: @Model.Stocks[j + 1].Price</h6>
		</a>
	</div>
	<div class="col">
		<a asp-controller="Product" asp-action="ShowProduct" asp-route-stockId="@Model.Stocks[j+2].Id">
			<img class="prod-image" src="@Model.Stocks[j+2].Product.PicturePath">
			<h6>@Model.Stocks[j + 2].Product.Name</h6>
			<h6>@Model.Stocks[j + 2].Product.Category.Name</h6>
			<h6>Shop: @Model.Stocks[j + 2].Shop.Name</h6>
			<h6>In stock: @Model.Stocks[j + 2].Quantity</h6>
			<h6>Price: @Model.Stocks[j + 2].Price</h6>
		</a>
	</div>
</div>
	j += 3;
}


