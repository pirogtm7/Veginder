@using BLL.DTOs
@model Veginder.Models.HomePageModel

@{
	ViewData["Title"] = "Home Page";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/index_carousel.css" />

<h1>Shops</h1>
<div id="carouselShops" class="carousel slide" data-bs-ride="carousel">
	<div class="carousel-indicators">
		<button type="button" data-bs-target="#carouselShops" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
		@for (int i = 1; i < Model.Shops.Count; i++)
		{
			<button type="button" data-bs-target="#carouselShops" data-bs-slide-to="@i" aria-label="Slide @(i + 1)"></button>
		}
	</div>
	<div class="carousel-inner">
		<div class="carousel-item active">
			<div class="container d-block w-100r">
				<div class="row">
					<img src="@Model.Shops[0].PicturePath">
				</div>
			</div>
		</div>
		@for (int i = 1; i < Model.Shops.Count; i++)
		{
			<div class="carousel-item">
				<div class="container d-block w-100r">
					<div class="row">
						<img src="@Model.Shops[i].PicturePath">
					</div>
				</div>
			</div>
		}
	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#carouselShops" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bs-target="#carouselShops" data-bs-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Next</span>
	</button>
</div>

<div class="row" style="height: 50px;"></div>
<h1>Categories</h1>
<div id="carouselProductCategories" class="carousel slide" data-bs-ride="carousel">
	<div class="carousel-indicators">
		<button type="button" data-bs-target="#carouselProductCategories" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
		@for (int i = 1; i < Model.Categories.Count / 4; i++)
		{
			<button type="button" data-bs-target="#carouselProductCategories" data-bs-slide-to="@i" aria-label="Slide @(i + 1)"></button>
		}
	</div>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="container d-block w-100r">
                <div class="row" style="height: 50px">
                    <div class="col">
                        <h1>
                            @Model.Categories[0].Name
                        </h1>
                    </div>
                    <div class="col" style="height: 50px">
                        <h1>
                            @Model.Categories[1].Name
                        </h1>
                    </div>
                </div>
                <div class="row" style="height: 50px">
                    <div class="col">
                        <h1>
                            @Model.Categories[2].Name
                        </h1>
                    </div>
                    <div class="col" style="height: 50px">
                        <h1>
                            @Model.Categories[3].Name
                        </h1>
                    </div>
                </div>
            </div>
        </div>

        @{int j = 4;}
        @for (int i = 1; i < Model.Categories.Count / 4; i++)
        {
        <div class="carousel-item">
             <div class="container d-block w-100r">
                <div class="row">
                    <div class="col">
                        <h1>
                            @Model.Categories[j].Name
                        </h1>
                    </div>
                    <div class="col">
                        <h1>
                            @Model.Categories[j + 1].Name
                        </h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <h1>
                            @Model.Categories[j + 2].Name
                        </h1>
                    </div>
                    <div class="col">
                        <h1>
                            @Model.Categories[j + 3].Name
                        </h1>
                    </div>
                </div>
            </div>
        </div>
        j += 4;
        }

    </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselProductCategories" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselProductCategories" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>




